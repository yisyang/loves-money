{
  "tableName": "customers",
  "identity": "customer",
  "connection": "lovesMoney",
  "attributes": {
    "uuid": {
      "type": "string",
      "primaryKey": true
    },
    "name": {
      "type": "string",
      "required": true,
      "notNull": true
    },
    "pw_hash": {
      "type": "string",
      "required": true,
      "notNull": true
    },
    "email": {
      "type": "email",
      "unique": true,
      "required": true,
      "notNull": true
    },
    "active": {
      "type": "boolean",
      "size": 1,
      "defaultsTo": true,
      "boolean": true,
      "notNull": true
    },
    "admin": {
      "type": "boolean",
      "size": 1,
      "defaultsTo": false,
      "boolean": true,
      "notNull": true
    },
    "aliases": {
      "collection": "alias",
      "via": "customer_id"
    }
  }
}
