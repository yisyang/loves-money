{
  "subdomain": "api",
  "controllerPath": "controllers/api",
  "viewPath": "views/api",
  "routesGroups": [
    {
      "controller": "index.js",
      "prefix": "/",
      "routes": [
        {
          "method": "get",
          "url": "/",
          "handler": "getIndex"
        }
      ]
    },
    {
      "controller": "aliases.js",
      "prefix": "/aliases",
      "routes": [
        {
          "method": "get",
          "url": "/",
          "handler": "getIndex"
        },
        {
          "method": "get",
          "url": "/:alias",
          "handler": "getAlias"
        }
      ]
    },
    {
      "controller": "aliases.js",
      "prefix": "/aliases",
      "middlewares": [
        "jwt-verify"
      ],
      "routes": [
        {
          "method": "post",
          "url": "/",
          "handler": "postAlias"
        },
        {
          "method": "delete",
          "url": "/_all",
          "handler": "deleteAll"
        },
        {
          "method": "delete",
          "url": "/:alias",
          "handler": "deleteAlias"
        }
      ]
    },
    {
      "controller": "auth.js",
      "prefix": "/auth",
      "routes": [
        {
          "method": "post",
          "url": "/login",
          "handler": "postLogin"
        }
      ]
    },
    {
      "controller": "auth.js",
      "prefix": "/auth",
      "middlewares": [
        "jwt-verify"
      ],
      "routes": [
        {
          "method": "get",
          "url": "/refresh",
          "handler": "getRefresh"
        }
      ]
    },
    {
      "controller": "customers.js",
      "prefix": "/customers",
      "middlewares": [
        "jwt-verify"
      ],
      "routes": [
        {
          "method": "get",
          "url": "/:id",
          "handler": "getCustomer"
        }
      ]
    },
    {
      "controller": "customers.js",
      "prefix": "/customers",
      "middlewares": [
        "jwt-verify",
        "jwt-verify-admin"
      ],
      "routes": [
        {
          "method": "post",
          "url": "/",
          "handler": "postCustomer"
        },
        {
          "method": "delete",
          "url": "/:id",
          "handler": "deleteCustomer"
        }
      ]
    }
  ]
}
