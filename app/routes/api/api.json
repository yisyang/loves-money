{
  "subdomain": "api",
  "controllerPath": "controllers/api",
  "viewPath": "views/api",
  "routesGroups": [
    {
      "controller": "IndexController.js",
      "prefix": "/",
      "routes": [
        {
          "method": "get",
          "url": "/",
          "handler": "getIndex"
        }
      ]
    },
    {
      "controller": "DomainAliasesController.js",
      "prefix": "/domain-aliases",
      "routes": [
        {
          "method": "get",
          "url": "/",
          "handler": "getIndex"
        },
        {
          "method": "get",
          "url": "/:alias",
          "handler": "getAlias"
        }
      ]
    },
    {
      "controller": "DomainAliasesController.js",
      "prefix": "/domain-aliases",
      "middlewares": [
        "jwt-verify"
      ],
      "routes": [
        {
          "method": "post",
          "url": "/",
          "handler": "postAlias"
        },
        {
          "method": "delete",
          "url": "/_all",
          "handler": "deleteAll"
        },
        {
          "method": "delete",
          "url": "/:alias",
          "handler": "deleteAlias"
        }
      ]
    },
    {
      "controller": "EmailAliasesController.js",
      "prefix": "/email-aliases",
      "routes": [
        {
          "method": "get",
          "url": "/",
          "handler": "getIndex"
        },
        {
          "method": "get",
          "url": "/:alias",
          "handler": "getAlias"
        }
      ]
    },
    {
      "controller": "EmailAliasesController.js",
      "prefix": "/email-aliases",
      "middlewares": [
        "jwt-verify"
      ],
      "routes": [
        {
          "method": "post",
          "url": "/",
          "handler": "postAlias"
        },
        {
          "method": "delete",
          "url": "/_all",
          "handler": "deleteAll"
        },
        {
          "method": "delete",
          "url": "/:alias",
          "handler": "deleteAlias"
        }
      ]
    },
    {
      "controller": "AuthController.js",
      "prefix": "/auth",
      "routes": [
        {
          "method": "post",
          "url": "/login",
          "handler": "postLogin"
        }
      ]
    },
    {
      "controller": "AuthController.js",
      "prefix": "/auth",
      "middlewares": [
        "jwt-verify"
      ],
      "routes": [
        {
          "method": "get",
          "url": "/refresh",
          "handler": "getRefresh"
        }
      ]
    },
    {
      "controller": "CustomersController.js",
      "prefix": "/customers",
      "middlewares": [
        "jwt-verify"
      ],
      "routes": [
        {
          "method": "get",
          "url": "/:id",
          "handler": "getCustomer"
        }
      ]
    },
    {
      "controller": "CustomersController.js",
      "prefix": "/customers",
      "middlewares": [
        "jwt-verify",
        "jwt-verify-admin"
      ],
      "routes": [
        {
          "method": "post",
          "url": "/",
          "handler": "postCustomer"
        },
        {
          "method": "delete",
          "url": "/:id",
          "handler": "deleteCustomer"
        }
      ]
    }
  ]
}
