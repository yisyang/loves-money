extends layout

block vars
	- var pageTitle = 'Pricing'

block content
	h1.ui.dividing.header.center.aligned
		i.icon.dollar.lm-blue
		= pageTitle
	.ui.container.center.aligned
		h2.ui.dividing.header.center.aligned.double.lm-spacing-margin.above
			| Plans
		table.ui.selectable.celled.padded.center.aligned.table
			thead
				tr
					th.single.line Feature \ Plan
					th Free
					th Supporter
					th Team
			tbody
				tr
					th.left.aligned
						| Number of domain aliases
					td
						| 1
					td
						| 5
					td
						| 25
				tr
					th.left.aligned
						| Daily redirects per domain
					td
						| 100
					td
						| 10k
					td
						| 100k
				tr
					th.left.aligned
						| Number of email aliases
					td
						| 1
					td
						| 5
					td
						| 50
				tr
					th.left.aligned
						| Daily redirects per email address
					td
						| 1k
					td
						| 100k
					td
						| 100k
				tr
					th.left.aligned
						| Ad-free redirects
					td
						i.icon.checkmark.lm-green
					td
						i.icon.checkmark.lm-green
					td
						i.icon.checkmark.lm-green
				tr
					th.left.aligned
						| Manual review of suspicious activity
					td
						i.icon.remove.lm-red
					td
						i.icon.checkmark.lm-green
					td
						i.icon.checkmark.lm-green
				tr
					th.left.aligned
						| Plan additions
					td
						i.icon.remove.lm-red
					td
						i.icon.checkmark.lm-green
					td
						i.icon.checkmark.lm-green
				tr
					th.left.aligned
						| High availability
					td
						i.icon.remove.lm-red
					td
						i.icon.remove.lm-red
					td
						i.icon.checkmark.lm-green

		h2.ui.dividing.header.center.aligned.double.lm-spacing-margin.above
			| Plan Additions
		table.ui.selectable.celled.padded.center.aligned.table
			thead
				tr
					th Item
					th Cost
			tbody
				tr
					th.left.aligned
						| Domain aliases
					td
						| $1 / ea. / mo.
				tr
					th.left.aligned
						| Email aliases
					td
						| $1 / ea. / mo.
				tr
					th.left.aligned
						| Domain redirects
					td
						| $0.02 / 1k
				tr
					th.left.aligned
						| Email redirects
					td
						| $0.01 / 1k