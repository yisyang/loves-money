$white = #ffffff
$red = red
$green = green
$blue = #005779
$blue-hover = #005779
$lm-default-spacing = 1em

body
	background-color: #fafafa
.lm-green
	color: $green
.lm-red
	color: $red
.lm-blue
	color: $blue
	&.button
		color: $white
		background-color: $blue
		box-shadow: none !important
		&:hover
			color: $blue
			background-color: transparent
			box-shadow: 0 0 0 2px $blue inset !important
		&.inverted
			color: $blue
			background-color: transparent
			box-shadow: 0 0 0 2px $blue inset !important
			&:hover
				color: $white
				background-color: $blue
				box-shadow: none !important
.lm-spacing-margin
	&.above
		margin-top: $lm-default-spacing
		&.double
			margin-top: 2 * $lm-default-spacing
	&.below
		margin-bottom: $lm-default-spacing
		&.double
			margin-bottom: 2 * $lm-default-spacing
.page-container
	position: relative
	top: 0
	left: 0
	min-height: 100%
	>.header
		.computer.only.row
			height: 3.5em
			margin-bottom: 2em
			>.menu
				height: 3.5em
		.mobile.only.row
			.sidebar-toggler
				padding-left: 2em
	>.content
		margin-top: 2em
		padding-bottom: 5em
	>.footer
		width: 100%
		position: absolute
		bottom: 0
.ui
	&.button.vertical-align-middle
		vertical-align: middle
	&.grid
		>.page-footer
			margin: 2em 0 0 0 !important
			padding-top: 0 !important
			padding-bottom: 0 !important
	&.header
		&.lm-spacing-margin
			&.above
				margin-top: $lm-default-spacing
				&.double
					margin-top: 2 * $lm-default-spacing
			&.below
				margin-bottom: $lm-default-spacing
				&.double
					margin-bottom: 2 * $lm-default-spacing
	&.inverted
		&.menu
		&.segment
			background-color: $blue
	&.menu
		.item img.logo
			margin-right: 1.5em
.wireframe
	margin-top: 2em